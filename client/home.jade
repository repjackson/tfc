                .sixteen.wide.column
                    a.ui.center.aligned.header(href="/dishes")
                        +i name='food' cl='ui tiny inline image'
                        |menu
                        |sections
                    .ui.centered.stackable.five.cards
                        each menu_sections
                            a.card(href="/food_section/#{_id}")
                                img.ui.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
                                .content
                                    .header 
                                        |#{title}
                .eight.wide.column
                    .ui.segment
                        .ui.small.header 
                            |menu items
                        .ui.selection.animated.small.list
                            each model_docs 'dish'
                                a.item(href="/dish/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                .eight.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/orders")
                            +i name='clock' cl='ui tiny inline image'
                            | orders
                        .ui.selection.animated.list
                            each latest_orders
                                a.item(href="/order/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                .eight.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/users")
                            +i name='groups' cl='ui tiny inline image'
                            |users
                        .ui.selection.animated.list
                            each dashboard_users
                                a.item(href="/user/#{username}") #{username}
                                    img.ui.avatar.image(src=user.profile.profilePic title=name)
                                    |#{title}

