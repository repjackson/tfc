template(name='home')
    .ui.stackable.padded.grid
        .sixteen.wide.column.scrolling
            .ui.stackable.grid 
                .twelve.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/food")
                            +i name='food' cl='ui avatar image'
                            |specials
                        .ui.selection.animated.list
                            each special_docs
                                a.item(href="/food/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                .four.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/food")
                            +i name='food' cl='ui avatar image'
                            |french word of the day
                .eight.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/food")
                            +i name='food' cl='ui avatar image'
                            |menu
                        .ui.selection.animated.list
                            each food_sections
                                a.item(href="/food_section/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                        .ui.selection.animated.list
                            each top_food
                                a.item(href="/food/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                .eight.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/orders")
                            +i name='clock' cl='ui avatar image'
                            | orders
                        .ui.selection.animated.list
                            each latest_orders
                                a.item(href="/order/#{_id}")
                                    img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                                    |#{title}
                .eight.wide.column
                    .ui.segment
                        a.ui.center.aligned.header(href="/users")
                            +i name='groups' cl='ui avatar image'
                            |users
                        .ui.selection.animated.list
                            each dashboard_users
                                a.item(href="/user/#{username}") #{username}
                                    img.ui.avatar.image(src=user.profile.profilePic title=name)
                                    |#{title}

